
page{
  margin: 0;
  width: 100%;
  height: 100%;
  /* height: 100%; */
  background: linear-gradient(-45deg,#2e3942,#3b343f,#35124d);
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.big{
  display: flex;
  justify-content: center;
  
}
view{
  box-sizing: border-box;
}
