.birthday{
    display: flex;
    justify-content: space-around;
}
.bg {
    display: show;
    position: fixed;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 1001;
    -moz-opacity: 0.6;
    opacity: 0.60;
    filter: alpha(opacity=60);
}
.show{
    position:fixed; bottom:0;width: 750rpx;
    background: #FFFFFF;
    display: block;
    float: left;
    z-index: 1002;
    overflow: auto;
}
