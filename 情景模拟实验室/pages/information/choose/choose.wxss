page {
    margin: 0;
    width: 100%;
    height: 100%;
    /* height: 100%; */
    background: linear-gradient(-45deg, #2e3942, #3b343f, #35124d);
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}

.thanks {
    height: 80%;
    display: flex;
    flex-direction: column;
    color: aliceblue;
    justify-content: space-evenly;
    align-items: center;
    font-size: 50rpx;
}

.thanks>view{
    background-color: rgb(156, 152, 152);
    height: 200rpx;
    width: 90%;
    border-radius: 25rpx;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}
.thanks>view>image{
    height: 80rpx;
    width: 80rpx;
}
.content {
    margin-left: 5%;
    margin-right: 5%;
    display: flex;
    align-items: center;
    height: 20%;
    color: aliceblue;
    font-size: 30rpx;
    font-family: 'webfont';
    justify-content: center;
    align-items: center;
}

@font-face {
    font-family: 'webfont';
    font-display: swap;
    src: url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.eot');
    /* IE9*/
    src: url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.eot?#iefix') format('embedded-opentype'),
        /* IE6-IE8 */
        url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.woff2') format('woff2'),
        url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.woff') format('woff'),
        /* chrome、firefox */
        url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.ttf') format('truetype'),
        /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
        url('//at.alicdn.com/t/webfont_06xv4zbvjy9a.svg#阿里汉仪智能黑体') format('svg');
    /* iOS 4.1- */
}