/* pages/require/require.wxss */
page{
    margin: 0;
    width: 100%;
    height: 100%;
    /* height: 100%; */
    background: linear-gradient(-45deg,#2e3942,#3b343f,#35124d);
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }
  view{
    box-sizing: border-box;
  }
  
  
  .input{
    width: 80%;
    height: 70%;
    border-radius: 20rpx;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .begin{
    margin-top:30rpx;
    font-size: 50rpx;
    font-weight: 600rpx;
  
  }
  .input view{
    font-size: 30rpx;
    line-height: 50rpx;
  }
  
  .block_container{
      display: flex;
      flex-direction: column;
      width: 88%;
  }

  /* 问题体 */
  .question_title{
    font-size: 35rpx;
    margin-top: 80rpx;
  }

 .question_style{
     font-size: 35rpx;
     margin-left:30rpx
 }
 .question_icon{
   position: relative;
   top: 5rpx;
   left: 30rpx;
