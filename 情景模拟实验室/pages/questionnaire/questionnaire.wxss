/* pages/require/require.wxss */
page{
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(-45deg,#2e3942,#3b343f,#35124d);
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }
  view{
    box-sizing: border-box;
  }
  
  
  .input{
    width: 80%;
    height: 82%;
    border-radius: 20rpx;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .input view{
    font-size: 30rpx;
    line-height: 40rpx;
  }
  button{
    width: 200rpx;
    height: 80rpx;
  }
  
  .block_container{
      display: flex;
      flex-direction: column;
      width: 97.7%;
  }

  /* 问题体 */
  .question_title{
     font-size: 35rpx;
     margin-top: 40rpx;
     margin-left: 30rpx;
     line-height : 50rpx;
    
  }

 .question_style{
     font-size: 35rpx;
     margin-top: 30rpx;
     margin-left: 80rpx;
     margin-bottom: 20rpx;
     color: rgb(133, 131, 131);
